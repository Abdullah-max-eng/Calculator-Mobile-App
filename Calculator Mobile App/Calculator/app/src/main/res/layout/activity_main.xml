<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text=""
            android:textSize="30sp"
            android:paddingRight="30dp"
            android:layout_gravity="end"
            android:id="@+id/WorkingTextView">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingRight="30dp"
            android:text=""
            android:textSize="45sp"
            android:layout_gravity="end"
            android:id="@+id/ReslutsTextView">
        </TextView>



    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/CalButtonTextSize"
                    android:onClick="ClearButton"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="C">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:onClick="ParntehsisButton"
                    android:text="()"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="^"
                    android:onClick="PowerButton"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:onClick="devisionButton"
                    android:text="/"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>
            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/CalButtonTextSize"
                    android:onClick="Button7"

                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="7">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="8"
                    android:onClick="Button8"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:onClick="Button9"
                    android:text="9"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:onClick="ButtonMultiplication"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="X"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="Button4"
                    android:textSize="@dimen/CalButtonTextSize"

                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="4">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="5"
                    android:onClick="Button5"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="6"
                    android:onClick="Button6"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="-"
                    android:onClick="ButtonSubstraction"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/CalButtonTextSize"
                    android:onClick="Button1"

                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="1">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="2"
                    android:onClick="Button2"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="3"
                    android:onClick="Button3"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text="+"
                    android:onClick="ButtonAddition"
                    android:textSize="@dimen/CalButtonTextSize">
                </Button>

            </LinearLayout>













            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/CalButtonTextSize"
                    android:onClick="ButtonDot"

                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:text=".">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:text="0"
                    android:onClick="Butto0"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/Orange"
                    android:text="="
                    android:onClick="ButtonEquals"
                    android:textSize="@dimen/CalButtonTextSize">

                </Button>



            </LinearLayout>












        </LinearLayout>


</LinearLayout>